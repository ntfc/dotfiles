#
# Openbox shutdown dialog
#

[general]
version = 0.1
verbose = false
default_action = shutdown
composite = true
transparency = true
transparent = 0.75
theme = faenza
buttons = cancel logout restart suspend hibernate shutdown

[actions]
logout = openbox --exit
shutdown = sudo systemctl poweroff
restart = sudo systemctl reboot
lock = 
switch = 
suspend = sudo systemctl suspend
hibernate = sudo systemctl hibernate
custom = 

[shortcuts]
logout = l
shutdown = s
restart = r

[labels]
cancel = CANCEL
logout = LOGOUT
restart = RESTART
shutdown = SHUTDOWN
lock = LOCK
switch = SWITCH USER
suspend = SUSPEND
hibernate = HIBERNATE
