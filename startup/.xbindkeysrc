###########################
# xbindkeys configuration #
###########################
#
# Use `xbindkeys --key` to identify single xbindkey config
# Or `xbindkeys --multikey` to identify multiple configs
#

keystate_numlock = enable
#keystate_scrolllock = enable
keystate_capslock = disable

# Ctrl+Win+L lock screen
"slock"
    Control+Mod2+Mod4 + l

# Alt+P to execute programs via rofi
"rofi -show run"
    Alt+Mod2 + p

# Alt+Shift+C t close window (except terminal)
"~/.scripts/close-window"
    Shift+Alt+Mod2 + c

# Shift+Alt+Return brings up the terminal
"~/.scripts/open-terminal"
    Shift+Alt+Mod2 + Return

# Take a screeshot
"xfce4-screenshooter"
    Mod2 + Print

# Win+F5 previous track
"~/.scripts/audio-control.sh prev"
    Mod2+Mod4 + F5
"~/.scripts/audio-control.sh next"
    Mod2 + XF86AudioPrev

# Win+F6 stop track
"~/.scripts/audio-control.sh stop"
    Mod2+Mod4 + F6

# Win+F7 pause track
"~/.scripts/audio-control.sh toggle"
    Mod2+Mod4 + F7
"~/.scripts/audio-control.sh toggle"
    Mod2 + XF86AudioPlay

# Win+F8 next track
"~/.scripts/audio-control.sh next"
    Mod2+Mod4 + F8
"~/.scripts/audio-control.sh next"
    Mod2 + XF86AudioNext

# mute microphone
"pactl set-source-mute @DEFAULT_SINK@ toggle"
    Mod2 + XF86AudioMicMute

"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    Mod2 + XF86AudioMute

"pactl set-sink-volume @DEFAULT_SINK@ -1000"
    Mod2 + XF86AudioLowerVolume

"pactl set-sink-volume @DEFAULT_SINK@ +1000"
    Mod2 + XF86AudioRaiseVolume

"light -A 3"
    Mod2 + XF86MonBrightnessUp

"light -U 3"
    Mod2 + XF86MonBrightnessDown

#Calculator
"speedcrunch"
    Mod2 + XF86Calculator 

#
# End of xbindkeys configuration
